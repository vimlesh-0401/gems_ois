<%= form_for @choice, remote: true do |f| %>
  <%= f.hidden_field :question_id %>
  <label class="sr-only" for="inlineFormInput">Choice</label>
  <%= f.text_field :content, placeholder: "Test Name", class: "form-control" %>
  <br/>
  <button type="submit" class="btn btn-primary">Add</button>
<% end %>
